%%%%%%%%%%%%%%%%%%%%% CHAPTER & SECTION TITLE FORMATTING %%%%%%%%%%%%%%%%%%%%%
\titleformat{\chapter}[block]
	{\singlespace\centering\huge}
	{\IfAppendix{Appendix~\thechapter:}{Chapter~\thechapter:}}{1ex}{#1}
\titlespacing{\chapter}{0pt}{0pt}{5pt}
\titleformat{\section}[block]
	{\singlespace\centering\large}
	{\thesection}{1ex}{#1}
\titlespacing{\section}{0pt}{0pt}{5pt}
\titleformat{\subsection}[block]
	{\singlespace\centering\large}
	{\thesubsection}{1ex}{#1}
\titlespacing{\subsection}{0pt}{0pt}{5pt}
\titleformat{\subsubsection}[block]
	{\singlespace\centering\large}
	{\thesubsubsection}{1ex}{#1}
\titlespacing{\subsubsection}{0pt}{0pt}{5pt}

%%%%%%%%%%%%%%%%%%%%%%%%%% PAGE & SECTION NUMBERING %%%%%%%%%%%%%%%%%%%%%%%%%%
\renewcommand{\thepage}{\roman{page}}
\renewcommand{\thefigure}{\thechapter.\arabic{figure}}
\renewcommand{\thetable}{\thechapter.\arabic{table}}
\renewcommand{\thesection}{\thechapter.\arabic{section}}
\renewcommand{\thesubsection}{\thesection.\arabic{subsection}}
\renewcommand{\thesubsubsection}{\thesubsection.\arabic{subsubsection}}

